<Button x:Name="Button" x:Class="WpfControlLibrary.ToggleButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fax="clr-namespace:WpfControlLibrary"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance}">
    <Style TargetType="{x:Type fax:ToggleButton}">
        <Style.Triggers>
            <Trigger Property="{Binding ElementName=Button, Path=IsToggled}" Value="True">
                <Setter Property="Background" Value="#3F3F41" />
                <Setter Property="BorderBrush" Value="#007ACC" />
            </Trigger>
        </Style.Triggers>
    </Style>
</Button>
